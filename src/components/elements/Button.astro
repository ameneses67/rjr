---
interface Props {
  size?: "md" | "lg";
  block?: boolean;
  style?: "outline" | "primary" | "inverted";
  class?: string;
  [x: string]: any;
}

const {
  size = "md",
  style = "primary",
  block,
  class: className,
  ...rest
} = Astro.props;

const sizes = {
  md: "px-5 py-2.5",
  lg: "px-6 py-3",
};

const styles = {
  outline:
    "border-2 border-skin-accent hover:bg-skin-accent text-skin-accent hover:text-white font-bold",
  primary:
    "bg-indigo-500 text-white hover:bg-indigo-600 border-2 border-transparent",
  inverted: "border-2 border-red hover:bg-black text-black hover:text-white",
};
---

<button
  {...rest}
  class:list={[
    "rounded text-center ring-gray-200 ring-offset-2 transition focus-visible:ring-2",
    block && "w-full",
    sizes[size],
    styles[style],
    className,
  ]}
  ><slot />
</button>
