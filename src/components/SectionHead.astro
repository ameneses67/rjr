---
// Componentes
import Heading from "./elements/Heading.astro";

interface Props {
  align?: string;
  tagType: string;
  hClass: "h1" | "h2" | "h3";
}

const { align = "center", tagType, hClass } = Astro.props;
---

<section class:list={["space-y-4", align === "center" && "text-center"]}>
  <Heading tagType={tagType} hClass={hClass}>
    <slot name="title" />
  </Heading>
  <p class="mx-auto max-w-2xl text-lg">
    <slot name="desc">Some description goes here</slot>
  </p>
</section>
