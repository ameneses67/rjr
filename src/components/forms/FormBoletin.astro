---
// Librerías
import { twMerge } from "tailwind-merge";

interface Props {
  text: string;
  classes?: string;
}

const { classes, text } = Astro.props;
---

<div class={twMerge(classes)}>
  <form class="mx-auto flex max-w-2xl flex-col gap-2 md:flex-row md:gap-0">
    <input
      type="email"
      name="email"
      id="email"
      placeholder="Correo electrónico"
      class="dark:bg-skin-fill-shade-dark placeholder:text-skin-base-dark -mr-3 w-full rounded-lg border-slate-200 px-3 py-4 dark:border-slate-800"
    />
    <button
      type="submit"
      class="bg-skin-accent hover:bg-skin-accent-hvr min-w-fit rounded-lg px-12 py-4 font-bold text-white transition"
      >{text}</button
    >
  </form>
</div>
