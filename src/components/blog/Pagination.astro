---
// Componentes
import Link from "../elements/Link.astro";

interface Props {
  prevURL?: string;
  nextURL?: string;
}

const { prevURL, nextURL } = Astro.props;
---

<aside
  class="mx-auto flex w-full max-w-3xl justify-between px-4 md:px-6 lg:px-0"
>
  {
    prevURL ? (
      <Link href={prevURL} style="outline">
        Anterior
      </Link>
    ) : (
      <div />
    )
  }
  {
    nextURL ? (
      <Link href={nextURL} style="outline">
        Siguiente
      </Link>
    ) : (
      <div />
    )
  }
</aside>
