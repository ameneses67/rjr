---
// Componentes
import Link from "../elements/Link.astro";

interface Props {
  page: number;
  numberOfPosts: number;
}

// Definir las pÃ¡ginas
const postsPerPage = Number(import.meta.env.POSTS_PER_PAGE);
const { page, numberOfPosts } = Astro.props;
const hasPreviousPosts = page > 1;
const hasNextPosts = numberOfPosts > page * postsPerPage;
---

<aside
  class="mx-auto flex w-full max-w-3xl justify-between px-4 md:px-6 lg:px-0"
>
  {
    hasPreviousPosts ? (
      <Link href={`/blog?page=${page - 1}`} style="outline">
        Anterior
      </Link>
    ) : (
      <div />
    )
  }
  {
    hasNextPosts ? (
      <Link href={`/blog?page=${page + 1}`} style="outline">
        Siguiente
      </Link>
    ) : (
      <div />
    )
  }
</aside>
