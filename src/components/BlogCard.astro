---
// Librer√≠as
import { Image } from "astro:assets";

// Componentes
import Heading from "./elements/Heading.astro";
import Link from "./elements/Link.astro";

// Utilidades
import { getFormattedDate } from "../utils/utils";

interface Props {
  blogTitle: string;
  updatedDate: Date;
  author: string;
  snippet: string;
  imgSrc: string;
  imgAlt: string;
  slug: string;
}

const { blogTitle, updatedDate, author, snippet, imgSrc, imgAlt, slug } =
  Astro.props;
---

<>
  <a href={slug}>
    <Heading tagType="h2" hClass="h2" classes="text-left">
      {blogTitle}
    </Heading>
  </a>
  <p>
    Por {author} &bull; Actualizado <time>{getFormattedDate(updatedDate)}</time>
  </p>
  <div class="mx-auto aspect-video max-w-2xl">
    <a href={slug}>
      <Image src={imgSrc} alt={imgAlt} width={700} height={400} />
    </a>
  </div>
  <p>{snippet}</p>
  <Link text="Seguir Leyendo..." href={slug} style="primary" />
</>
