---
// Librerías
import { twMerge } from "tailwind-merge";

interface Props {
  text: string;
  classes?: string;
}

const { classes, text } = Astro.props;
---

<div class={twMerge(classes)}>
  <form class="mx-auto flex max-w-2xl flex-col gap-2 md:flex-row md:gap-0">
    <input
      type="email"
      name="email"
      id="email"
      placeholder="Correo electrónico"
      class="-mr-3 w-full rounded-lg border-slate-200 px-3 py-4 placeholder:text-slate-400 dark:border-slate-800 dark:bg-slate-800"
    />
    <button
      type="submit"
      class="min-w-fit rounded-lg bg-indigo-500 px-12 py-4 font-bold text-white transition hover:bg-indigo-600"
      >{text}</button
    >
  </form>
</div>
