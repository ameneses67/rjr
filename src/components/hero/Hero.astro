---
// Librerias
import { Image } from "astro:assets";

// Componentes
import FormBoletin from "./FormBoletin.astro";
import Heading from "../elements/Heading.astro";

// Im√°genes
import Bodyshot from "../../assets/hero/bodyshot.png";
import TestimonioCard from "./TestimonioCard.astro";
---

<section
  class="from-skin-fill to-skin-fill-shade dark:from-skin-fill-dark dark:to-skin-fill-very-dark w-full border-b border-slate-200 bg-gradient-to-b dark:border-slate-800 sm:gap-6"
>
  <div class="flex justify-center gap-8">
    <div class="space-y-4 pb-4 pl-4 sm:space-y-8 sm:pl-6 md:py-6">
      <Heading tagType="h1" hClass="h1" classes="text-left max-w-xl">
        Recibe tips financieros exclusivos para los suscriptores
      </Heading>
      <TestimonioCard classes="hidden md:block" />
      <FormBoletin text="No pierdo nada" classes="hidden lg:block" />
    </div>
    <div class="flex items-end pr-4 sm:pr-6">
      <Image
        src={Bodyshot}
        alt={"Imagen de Alfonso Meneses"}
        format="avif"
        quality="mid"
      />
    </div>
  </div>
  <FormBoletin
    text="No pierdo nada con probar"
    classes="lg:hidden border-t border-slate-200 dark:border-slate-800 py-4 px-4 sm:px-6 bg-skin-fill dark:bg-skin-fill-dark"
  />
</section>
