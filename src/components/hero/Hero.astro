---
// Librerias
import { Image } from "astro:assets";

// Componentes
import FormBoletin from "../forms/FormBoletin.astro";
import Heading from "../elements/Heading.astro";

// Im√°genes
import Bodyshot from "../../assets/hero/bodyshot.png";
import TestimonioCard from "./TestimonioCard.astro";
import NewsletterOptinForm from "../forms/NewsletterOptinForm.astro";
---

<section class="w-full sm:gap-6">
  <div
    class="mx-auto flex max-w-fit justify-center gap-8 border-b border-skin-base-shade px-4 dark:border-skin-base-shade-dark sm:px-6"
  >
    <div class="space-y-4 pb-4 sm:space-y-8 md:py-6">
      <Heading tagType="h1" hClass="h1" classes="text-left max-w-xl">
        Recibe tips financieros exclusivos para suscriptores
      </Heading>
      <TestimonioCard classes="hidden md:block" />
      <NewsletterOptinForm text="No pierdo nada" classes="hidden lg:block" />
    </div>
    <div class="flex items-end">
      <Image
        src={Bodyshot}
        alt={"Imagen de Alfonso Meneses"}
        format="avif"
        quality="mid"
      />
    </div>
  </div>
  <NewsletterOptinForm
    text="No pierdo nada con probar"
    classes="lg:hidden border-b border-skin-base-shade dark:border-skin-base-shade-dark py-4 px-4 sm:px-6 bg-skin-fill dark:bg-skin-fill-dark"
  />
</section>
