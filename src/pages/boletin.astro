---
// Layouts
import MainLayout from "../layouts/MainLayout.astro";

// Componentes
import BoletinHero from "../components/BoletinHero.astro";
import Features from "../components/features/Features.astro";
import Heading from "../components/elements/Heading.astro";
import NewsletterForm from "../components/forms/NewsletterForm.astro";
import Section from "../components/elements/Section.astro";

const title = "Boletín Informativo";
const description =
  "Recibe tips financieros exclusivos que solo compartimos con nuestros suscriptores directamente en tu correo electrónico.";
---

<MainLayout {title} {description}>
  <BoletinHero />
  <Section classes="space-y-16">
    <Heading tagType="h2" hClass="h1" classes="max-w-3xl">
      Unete a cientos de personas que reciben tips financieros semanalmente en
      su correo
    </Heading>
    <div
      class="mx-auto max-w-md border border-skin-base p-6 text-center text-2xl leading-relaxed dark:border-skin-base-dark sm:p-12"
    >
      <p>
        ¡Toma el control de tu dinero! No dejes que el dinero te controle a tí.
      </p>
    </div>
    <NewsletterForm text="Pruébalo" classes="max-w-md w-full mx-auto" />

  </Section>
</MainLayout>
