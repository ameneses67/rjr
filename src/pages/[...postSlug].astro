---
// Librerías
import { getEntry } from "astro:content";
import { Image } from "astro:assets";
import { XataClient } from "../xata";

// Layouts
import MainLayout from "../layouts/MainLayout.astro";

// Componentes
import Heading from "../components/elements/Heading.astro";
import TableOfContent from "../components/blog/TableOfContent.astro";
import Share from "../components/blog/Share.astro";
import CommentsForm from "../components/forms/CommentsForm.astro";
import Button from "../components/elements/Button.astro";

// Utilidades
import { slugify, removeTags } from "../utils/utils";

const { postSlug } = Astro.params;
if (postSlug === undefined) {
  throw new Error("postSlug is required");
}

const entry = await getEntry("blog", postSlug.split("/").pop() as string);
if (entry === undefined) {
  return Astro.redirect("/404");
}

const { Content, headings } = await entry.render();

// Añadiendo comentario a bd
const errors: Record<string, string> = {};

const xata = new XataClient({
  apiKey: import.meta.env.XATA_API_KEY,
  branch: import.meta.env.XATA_BRANCH,
});

if (Astro.request.method === "POST") {
  try {
    const formData = await Astro.request.formData();
    const comment = formData.get("comment") as string;

    if (typeof comment !== "string" || comment.length < 10) {
      errors.comment = "Tu comentario debe ser de al menos 10 caracteres";
    }
    const hasErrors = Object.values(errors).some((msg) => msg);
    if (!hasErrors) {
      const record = await xata.db.comments.create({
        post: postSlug,
        comment,
        user: Astro.cookies.get("userId")?.value,
      });
      console.log(record);
    }
  } catch (error) {
    if (error instanceof Error) console.error(error.message);
  }
}

const comments = await xata.db.comments
  .select(["id", "comment", "user.name", "date"])
  .filter("post", postSlug)
  .getMany();
---

<MainLayout
  title={entry.data.title}
  description={removeTags(entry.data.snippet.slice(0, 160))}
  image={entry.data.image.src.src}
>
  <section class="container mx-auto max-w-5xl space-y-8 px-4 sm:px-6">
    <Heading tagType="h1" hClass="h1" classes="text-left">
      {entry.data.title}
    </Heading>
    <Image
      src={entry.data.image.src}
      alt={entry.data.image.alt}
      format="avif"
      quality={"mid"}
      class="aspect-video w-full rounded-lg object-cover shadow-lg dark:shadow-slate-50/10"
    />
    <Share
      url={`${slugify(entry.data.category)}/${entry.slug}/`}
      text={entry.data.title}
    />
  </section>
  <section
    class="container mx-auto space-y-12 px-4 sm:px-6 lg:flex lg:justify-center lg:gap-x-8 lg:space-y-0"
  >
    <aside>
      <div class="sticky top-4 max-w-xs space-y-4">
        <Heading tagType="h3" hClass="h3" classes="text-left">
          En esta página
        </Heading>
        <TableOfContent headings={headings} />
      </div>
    </aside>
    <div class="space-y-16">
      <article
        class="prose prose-lg prose-slate dark:prose-invert prose-h2:scroll-mt-4 prose-h3:scroll-mt-4 prose-h4:scroll-mt-4 prose-blockquote:border-skin-accent-shade prose-li:marker:text-skin-accent-shade"
      >
        <Content />
      </article>
      <div class="text-center">
        <Button onclick="history.back()" style="outline">← Atrás</Button>
      </div>
    </div>
  </section>
  <CommentsForm {errors} {comments} />
</MainLayout>
